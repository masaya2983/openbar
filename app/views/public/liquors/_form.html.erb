<%= form_with model: liquor, local:true do |f|%>
  <div class="form-group">
  <%= f.label :genre_id,"カテゴリー"%>
  <%= f.collection_select :genres_id, Category.all, :id, :name, { include_blank: true }, { class: "form-control" } %>
</div>

<div class="form-grup">
  <%= f.label :title ,"タイトル"%>
  <%= f.text_field :title, class: 'form-control liquor_name' %>
</div>
<div class="form-group">
  <%= f.label:body,"レビュー"%>
  <%= f.text_area :body %>
</div>
<div class="form-group">
  <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>