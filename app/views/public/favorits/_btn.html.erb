<% if liquor.favorited_by?(current_user) %>
 <%= link_to liquor_favorites_path(liquor),method: :delete, remote: true do %>
  <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
  <%= liquor.favorites.count %>
 <% end %>
<% else %>
  <%= link_to liquor_favorites_path(liquor),method: :post, remote: true do %>
   <i class="fas fa-heart" aria-hidden="true"></i>
   <%= liquor.favorites.count %>
  <% end %>
<% end %>