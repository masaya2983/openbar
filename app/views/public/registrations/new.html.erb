<div class="container px-5">
  <div class="row">
    <div class="col text-left">
      <h2>新規登録</h2>

       <%= form_with model: resource,url: user_registration_path, id: 'new_user', local: true do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
          <div class="form-group row">
           <%= f.label :name,"名前" %>
             <%= f.text_field :name, autofocus: true, class: "name" %>
          </div>
                <div class="field">
                  <%= f.label :email,"Email" %><br />
                    <%= f.email_field :email, autofocus: true, class: "email" %>
          </div>

          <div class="field">
           <%= f.label :password,"パスワード" %>
            <% if @minimum_password_length %>
             <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
               <%= f.password_field :password, autocomplete: "new-password" %>
           </div>

          <div class="field">
            <%= f.label :password_confirmation,"パスワード" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>
<h3>登録済みの方</h3>
<%= link_to "こちら",new_session_path(resource_name) %>

  </div>
 </div>
</div>