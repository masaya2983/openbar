<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h3>ゲーム一覧</h3>
      <table class="table rable-hover table-inverse">
        <thead>
          <tr>
            <th>投稿</th>
            
            <th>評価</th>
            <th>ステータス</th>
          </tr>
        </thead>

        <tbody>
          <% @liquors.each do |liquor| %>
            <tr>
              <td><%= liquor.id %></td>
              <td>
                <%= link_to admin_game_path (liquor.id) do %>
                  <%= liquor.title %>
                <% end %>
              </td>
              <td><%= liquor.review %></td>
              <td><%= liquor.star %></td>
              <td>
                <% if liquor.is_deleted? %>
                  <P>削除</P>
                <% else %>
                   <p class="text-success"><strong>有効</strong></p>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @games %>
    </div>
    </div>
   <%= link_to "top", admin_root_path, class: "btn btn-primary" %>
  </div>